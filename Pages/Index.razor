@page "/"
@using Util
@using Models
@inject PokedexClient client

<div class="container">
  <img src="/img/Pokemon.png" class="app-title">
    <div class="pokemon-row">
        @foreach(var pokemon in pokemonList)
        {
            <div class="pokemon-card">
                <img src="@pokemon.sprites.front_default" alt="Pokemon Sprite">
                    <h4 class="pokemon-name">@pokemon.name</h4>
                    <div class="type-row">
                        @foreach(var type in pokemon.types)
                        {
                           <span class="badge-type" style="background-color: @PokemonColor.GetTypeColor(@type.type.name);">@type.type.name</span> 
                        }
                    </div>
            </div>
        }
    </div>
</div>

<h1>@pokemon.name</h1>

@code {
    Pokemon pokemon = new Pokemon();
    List<Pokemon> pokemonList = new List<Pokemon>();

    protected override async Task OnInitializedAsync()
    {
       for(int i = 1; i < 50; i++)
       {
            pokemonList.Add(await client.GetPokemon(i.ToString()));
            StateHasChanged();
       }
    }
}
